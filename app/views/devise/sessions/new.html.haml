%h2= t('.sign_in')
= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f|
  .field.form-group
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter Email'
  .field.form-group
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password'
  - if devise_mapping.rememberable?
    .field.form-group
      = f.check_box :remember_me
      = f.label :remember_me
  .actions.mb-2
    = f.submit t('.sign_in')
= render "devise/shared/links"
